{
  "name": "alexa-skills",
  "version": "0.1.0",
  "description": "A collection of Alexa skills I will be devloping to test what is possible",
  "main": "build/index.js",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon",
    "build": "rimraf ./build && tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "start": "npm run build && NODE_ENV=production node build/index.js",
    "kill": "kill -9 $(lsof -t -i:8080)"
  },
  "author": "Jameel Kelley",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "eslint": "^7.1.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "ask-sdk-core": "^2.8.0",
    "ask-sdk-express-adapter": "^2.1.0",
    "ask-sdk-model": "^1.28.0",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [
      "node_modules",
      "build",
      ".vscode"
    ],
    "exec": "ts-node ./src/index.ts",
    "delay": "1500"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
